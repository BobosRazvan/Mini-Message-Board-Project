<%- include ('partials/header') %>

  <div class="container px-4 py-5" id="featured-3">
    <h2 class="pb-2 border-bottom">Write a new Message</h2>
    <form method="POST" action="/new">
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">From:</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" name="user">
    </div>
    
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Text:</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" name="text">
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </div>
    </form>
  </div>
</body>
